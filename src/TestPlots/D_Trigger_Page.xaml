<Page x:Class="Emulators.D_Trigger_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Emulators"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="770"
      Title="D_Trigger_Page">

	<Grid>
		<StackPanel Orientation="Vertical">
			<Label FontSize="20">D Trigger chart</Label>
			<WpfPlot HorizontalAlignment="Left" Name="D_TriggerChart" Width="600" Height="120"/>
			<Label FontSize="16">D input chart</Label>
			<DockPanel>
				<WpfPlot Name="D_Chart" Width="600" Height="120"/>
				<StackPanel Orientation="Vertical">
					<DockPanel>
						<Label>High level voltage</Label>
						<TextBox Name="D_HighVoltageInput" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Low level voltage</Label>
						<TextBox Name="D_LowVoltageInput" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Hight level duration</Label>
						<TextBox Name="D_HightVoltageDuration" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Low level duration</Label>
						<TextBox x:Name="D_LowVoltageDuration" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Hz</Label>
						<TextBox Name="D_Hz" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
				</StackPanel>
			</DockPanel>
			<Label FontSize="16">C input chart</Label>
			<DockPanel>
				<WpfPlot Name="C_Chart" Width="600" Height="120"/>
				<StackPanel Orientation="Vertical">
					<DockPanel>
						<Label>High level voltage</Label>
						<TextBox Name="C_HighVoltageInput" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Low level voltage</Label>
						<TextBox Name="C_LowVoltageInput" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Hight level duration</Label>
						<TextBox Name="C_HightVoltageDuration" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Low level duration</Label>
						<TextBox Name="C_LowVoltageDuration" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
					<DockPanel>
						<Label>Hz</Label>
						<TextBox Name="C_Hz" HorizontalAlignment="Right" Width="50"></TextBox>
					</DockPanel>
				</StackPanel>
			</DockPanel>
		</StackPanel>
	</Grid>
</Page>
